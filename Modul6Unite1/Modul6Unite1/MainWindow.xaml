<Window x:Class="ToplamaIslemi.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Toplama İşlemi" Height="387" Width="722">
    <Grid>
        <Label Content="1. Sayı" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox Name="textBox1" HorizontalAlignment="Left" Margin="100,10,0,0" VerticalAlignment="Top" Width="150"/>

        <Label Content="2. Sayı" HorizontalAlignment="Left" Margin="10,50,0,0" VerticalAlignment="Top"/>
        <TextBox Name="textBox2" HorizontalAlignment="Left" Margin="100,50,0,0" VerticalAlignment="Top" Width="150"/>

        <Label Content="Sonuç" HorizontalAlignment="Left" Margin="10,90,0,0" VerticalAlignment="Top"/>
        <TextBox Name="textBox3" HorizontalAlignment="Left" Margin="100,90,0,0" VerticalAlignment="Top" Width="150" IsReadOnly="True"/>

        <Button Content="Hesapla" Name="hesapla" HorizontalAlignment="Left" Margin="100,130,0,0" VerticalAlignment="Top" Width="150" Click="islem"/>
    </Grid>
</Window>